= form_for @test do |f|
  - if @test.errors.any?
    #error_explanation
      h2 = "#{pluralize(@test.errors.count, "error")} prohibited this test from being saved:"
      ul
        - @test.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :foo
    = f.text_field :foo
  .field
    = f.label :bar
    = f.text_field :bar
  .actions = f.submit 'Save'
